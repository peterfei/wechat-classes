<view class="container" style="height:{{containerHeight}}px;">
    <!-- tab导航栏 -->
    <!-- scroll-left属性可以控制滚动条位置 -->
    <!-- scroll-with-animation滚动添加动画过渡 -->
    <scroll-view scroll-x="true" class="nav" scroll-left="{{navScrollLeft}}" scroll-with-animation="{{true}}">
        <block wx:for="{{navData}}" wx:for-index="idx" wx:for-item="navItem" wx:key="idx">
            <view class="nav-item {{currentTab == idx ?'active':''}}"  data-current="{{idx}}" bindtap="switchNav" data-itemkey="{{navItem.key}}">{{navItem.text}}</view>
        </block>
    </scroll-view>
    <!-- 页面内容 -->
    <swiper class="tab-box" current="{{currentTab}}" duration="300" bindchange="switchTab" style="height:{{tabBoxHeight}}px;" id="{{currentTab}}" data-key="{{navItem}}">

            <swiper-item wx:for="{{navData}}" wx:for-item="tabItem" wx:for-index="idx" wx:key="idx" class="tab-content">
                <item-lists  itemResult="{{tabItem.children}}" isColumn="{{false}}"  bind:myachieve="onMyAchieve" bind:loadMoreData="loadMoreData" wx:if="{{tabItem.children.length>0}}"  />
                <block wx:if="{{showNoResult}}">
                        <view class="no-result" wx:if="{{tabItem.children.length==0}}">
                    <text>暂无数据</text>
                </view>
                </block>

                </swiper-item>

    </swiper>
</view>
