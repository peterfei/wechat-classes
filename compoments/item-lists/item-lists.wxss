/* compoments/item-lists/item-lists.wxss */
.items {
  height: 100%;
}
.item {
  flex: 1;
  display: flex;
  /*margin: 5px;*/
  align-items: center;
  border-style: solid;
  border-width: 1px 0 1px 0;
  border-color: #e0e0e0;
  padding: 5px;
  background-color: rgb(255, 255, 255);
}
.item .item-image {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img {
  width: 55px;
  height: 55px;
  border-radius: 8px;
}
.item .item-text-row {
  display: flex;
  justify-content: space-between;
  flex:1;
  margin: 4px;
}
.item .item-text {
  flex: 4;
  display: flex;
  flex-direction: column;
  /*margin: 5px;*/
}
.text-subtitle {
  display: flex;
  justify-content: space-between;
  color: rgb(110, 110, 110);
}

.item-footer {
  flex: 1;
}
.item-text .text-title {
  font-size: 18px;
  color: rgb(75, 75, 75);
}
.item-text .content {
  margin: 5px;
}
.content image {
  width: 120px;
  height: 100px;
}
.item-footer-text {
  width: 50%;
}
.header-img-s {
  width: 95px;
  height: 95px;
  border-radius: 8px;
}
.header {
  display: flex;
  align-items: center;
  border-color: #e9e9e9;
  border-style: solid;
  border-width: 2px 0 2px 0;
  padding: 10px;
  height: 100px;
  flex: 1;
  background-color: white;
}
.header .header-img {
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header .header-text {
  flex: 8;
  display: flex;
  flex-direction: column;
  margin: 5px;
}
.label {
  color: grey;
  border-color: #999;
  border-width: 1px;
  border-style: solid;
  width: 20%;
  margin: 2px 0 2px 0;
  flex: 1;
  display: flex;
  justify-content: center;
}
