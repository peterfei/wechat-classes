/* compoments/item-lists/item-lists.wxss */
.items {
  height: 100%;
}
.item {
  flex: 1;
  display: flex;
  /*margin: 5px;*/
  align-items: center;
  border-style: solid;
  border-width: 1px 0 1px 0;
  border-color: #e0e0e0;
  padding: 5px;
  background-color: rgb(255, 255, 255);
}
.item .item-image {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item .item-icon {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.img {
  width: 55px;
  height: 55px;
  border-radius: 8px;
}
.content-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 1px;
  font-size: 18px;
  color: #9e9e9e;
  background-color: #fff;
}
