/* compoments/item-lists/item-lists.wxss */
.items {
  height: 100%;
}
.item {
  flex: 1;
  display: flex;
  /*margin: 5px;*/
  align-items: center;
  border-style: solid;
  border-width: 1px 0 1px 0;
  border-color: #e0e0e0;
  padding: 5px;
}
.item .item-image {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img {
  width: 55px;
  height: 55px;
  border-radius: 8px;
}
.item .item-text {
  flex: 3;
  display: flex;
  flex-direction: column;
  /*margin: 5px;*/
}
.item .item-text .text-subtitle {
  display: flex;
  justify-content: space-between;
  color: rgb(110, 110, 110);
}

.item-text .text-title {
  font-size: 18px;
  color: rgb(75, 75, 75);
}
