.container{
    height: calc(100vh - 40px);
}
.tabbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  right: 0;
}

.gotorecord {
  position: fixed;
  top: 75%;
  left: 40%;
  background-image: linear-gradient(to right, white,5%,orange);
  width: 80px;
  bottom: 0;
  right: 0;
  color: white;
  z-index: 100px;
  height: 80px;
  border-radius: 40px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.gotorecord text {
  flex: 1;
  margin-top: 35%;
  font-size: 18px;
}

.page-header {
  background-color: green;
  height: 60px;
  display: flex;
  flex-direction: row;
  width: 100vw;
  justify-content: space-around;
  align-items: center;

}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  font-size: 16px;
}
